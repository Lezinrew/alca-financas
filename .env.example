# Ambiente de execução (local, production)
NODE_ENV=local

# URLs Base - Local
LOCAL_API_URL=http://localhost:5000
LOCAL_WEB_URL=http://localhost:3000
LOCAL_MONGO_URL=mongodb://localhost:27017/alca_financas

# URLs Base - Produção
PROD_API_URL=https://api.alcahub.com.br
PROD_WEB_URL=https://alcahub.com.br
PROD_MONGO_URL=mongodb+srv://user:pass@cluster.mongodb.net/alca_financas

# API Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# OAuth 2.0 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth 2.0 - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# OAuth 2.0 - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Email Service (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Testes
TEST_USER_EMAIL=test@alcahub.com.br
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@alcahub.com.br
TEST_ADMIN_PASSWORD=AdminPassword123!

# Configurações de Deploy
DEPLOY_USER=deploy
DEPLOY_HOST=alcahub.com.br
DEPLOY_PATH=/var/www/alcahub

# Sentry (Error Tracking - opcional)
SENTRY_DSN=

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
