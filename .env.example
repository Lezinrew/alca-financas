# ================================
# ALCA FINANÃ‡AS - Environment Variables
# ================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env files with real credentials

# ================================
# ENVIRONMENT
# ================================
NODE_ENV=development
FLASK_ENV=development

# ================================
# SUPABASE (REQUIRED)
# ================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGc...your-anon-key
# WARNING: SUPABASE_SERVICE_ROLE_KEY should ONLY be used in backend, NEVER in frontend
SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...your-service-role-key

# ================================
# BACKEND
# ================================
BACKEND_PORT=8001
HOST=0.0.0.0
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# JWT Configuration
JWT_SECRET=change-this-jwt-secret-key
JWT_EXPIRES_HOURS=24

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ================================
# FRONTEND
# ================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8001

# ================================
# OAUTH (Optional)
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/auth/google/callback

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Apple OAuth (Optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# ================================
# EMAIL SERVICE (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================
# MONITORING (Optional)
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ================================
# DEPLOYMENT (Production Only)
# ================================
DEPLOY_USER=deploy
DEPLOY_HOST=your-domain.com
DEPLOY_PATH=/var/www/app

# ================================
# TESTING
# ================================
TEST_USER_EMAIL=test@alca.test
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@alca.test
TEST_ADMIN_PASSWORD=AdminPassword123!
